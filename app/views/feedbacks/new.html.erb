<div class="row">
  <div class="small-8 small-offset-2 column">
    <div class="callout large">
      <h2 class="user-heading description">Give us your feedback!</h2>

      <%= simple_form_for @feedback, defaults: { label_html: { class: 'description' }, input_html: { class: 'search-field' } }, url: feedbacks_path do |f| %>
        <%= f.input :label %>
        <%= f.input :message, as: :text %>
        <%= f.input :link, placeholder: '(Optional)' %>
        <%= f.hidden_field :user_id, value: current_user.id  %>
        <%= f.button :submit, 'Submit', class: 'submit-btn' %>
      <% end %>
    </div>
  </div>
</div>

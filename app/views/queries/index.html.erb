<div class="form-container">
<%= render 'search_form' %>
</div>
<% if @recipes %>
  <div class="row">
    <div class="small-3 columns ">
      <div class="hidden-btn-container float-left">
        <button type="button" id='get-form' class='floating-btn'>Find More Recipes</button>
      </div>
    </div>
    <div class="small-9 columns">
      <div class="float-left">
      <%= will_paginate @recipes,
                        params: {anchor: 'cards'},
                        previous_label: '<',
                        next_label: '>' %>
      </div>
    </div>
  </div>
  <div class='row'>
    <div class="small-12 columns">
      <div name="cards" class='recipe-cards-container'>
        <%= render 'recipe_cards' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns text-center">
      <%= will_paginate @recipes,
                        params: {anchor: 'cards'},
                        previous_label: '<',
                        next_label: '>'%>
    </div>
  </div>

<% end %>

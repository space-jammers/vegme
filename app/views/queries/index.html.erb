<div class="form-container">
<%= render 'search_form' %>
</div>
<% if @recipes %>
  <div class="row">
      <div class="hidden-btn-container">
        <button type="button" id='get-form' class='hidden-btn'>Find More Recipes</button>
      </div>
    <div class="small-12 columns text-center">

      <%= will_paginate @recipes,
                        params: {anchor: '.recipe-cards-container'},
                        previous_label: '<',
                        next_label: '>' %>
    </div>
  </div>
  <div class='row'>
    <div class="small-12 columns">
      <div class="recipe-cards-container">
        <%= render 'recipe_cards' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns text-center">
      <%= will_paginate @recipes,
                        params: {anchor: '.recipe-cards-container'},
                        previous_label: '<',
                        next_label: '>'%>
    </div>
  </div>

<% end %>

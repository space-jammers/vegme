<% @recipes.each do |recipe| %>
  <% recipe = recipe.make_dto %>
  <div class="callout callout-hover-reveal" >
    <div class="callout-body">
      <div class="card-image">
        <%= image_tag(recipe.image) %>
      </div>
      <h4><%= recipe.label %></h4>
      <%= render partial: 'buttons', locals: { recipe: recipe } %>
      <span class="label secondary">
        <b><%= recipe.yield %></b>
        servings
      </span>
      <br>
      <span class="label secondary">
        <b><%= (recipe.calories/recipe.yield).round(1)%></b>
        calories per serving
      </span>
      <div class="pointer text-center" data-pointer="<%= recipe.label %>">
        <i class="fa fa-chevron-down"></i>
      </div>
    </div>
    <div class="callout-footer" data-footer="<%= recipe.label %>">
      <h4>Ingredients</h4>
      <ul class='list-group'>
        <% recipe.ingredient_list.each do |ingred| %>
          <li class='list-item'>
            <%= ingred %>
          </li>
        <% end %>
      </ul>
      <%= link_to 'See Directions',
                  recipe.url,
                  target: '_blank',
                  class:'button',
                  method: :get %>
    </div>
  </div>
<% end %>


<%= form_tag(search_path, :method=>'post') do %>
 <p>
   Search Term:<br />
   <%= text_field_tag "q", QueryResult.return_query_term, placeholder: 'Search' %>
 </p>
  <p>
    Number of Results:<br />
    <%= number_field_tag "limit" %>
  </p>
   <p>
     Health:<br />
     <%= text_field_tag "health" %>
   </p>
 <p>
   <%= submit_tag 'Submit' %>
 </p>
<% end %>

<% if @recipes %>
<%= @recipes %>
<% end %>

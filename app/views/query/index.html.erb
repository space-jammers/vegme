<h1>Search Results</h1>

<ul>
  <% @recipes['hits'].each do |hit| %>
    <li class="callout primary clearfix">
      <div class="float-left">
        <span>
          <b><%= hit['recipe']['label'] %></b>
        </span>
        <br>
        <span>
          <%= image_tag(hit['recipe']['image']) %>
        </span>
        <br>
        <span>
          <b>YIELDS:</b>
          <%= hit['recipe']['yield'] %>
        </span>
        <br>
        <span>
          <b>SOURCE:</b>
          <%= hit['recipe']['source'] %>
      </span>
        <br>
        <span>
          <%= link_to 'Recipe Link', hit['recipe']['url'] %>
        </span>
      </div>
      <span class="float-right">
        <ul>
          <% hit['recipe']['ingredientLines'].each do |i| %>
            <li>
              <%= i %>
            </li>
          <% end %>
      </ul>
      </span>
    </li>
  <% end %>
</ul>

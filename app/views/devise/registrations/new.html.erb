<div class="row">
  <div class="small-12 medium-8 medium-offset-2 large-8 large-offset-2 column">
    <div class="callout large">
      <h2 class="user-heading description">Sign up</h2>
      <%= form_for(resource, as: resource_name,
                             url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="field">
          <%= f.label :email, class: 'description' %><br />
          <%= f.email_field :email,
                            autofocus: true,
                            class: 'search-field' %>
        </div>
        <div class="field">
          <%= f.label :password, class: 'description' %>
          <% if @minimum_password_length %>
          <em class="description">
            (<%= @minimum_password_length %> characters minimum)
          </em>
          <% end %>
          <br />
          <%= f.password_field :password,
                               autocomplete: "off",
                               class: 'search-field' %>
        </div>
        <div class="field">
          <%= f.label :password_confirmation, class: 'description' %><br />
          <%= f.password_field :password_confirmation,
                               autocomplete: "off",
                               class: 'search-field' %>
        </div>
        <div class="actions">
          <%= f.submit "Sign up", class: 'submit-btn' %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

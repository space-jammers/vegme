<div class="row">
  <div class="small-12 medium-8 medium-offset-2 large-8 large-offset-2 column">
    <div class="callout large">
      <h2 class="user-heading description">Log in</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, class: 'description' %><br />
          <%= f.email_field :email, autofocus: true, class: 'search-field' %>
        </div>
        <div class="field">
          <%= f.label :password, class: 'description' %><br />
          <%= f.password_field :password, autocomplete: "off", class: 'search-field' %>
        </div>
        <div class="actions">
          <%= f.submit "Log in", class: 'submit-btn' %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

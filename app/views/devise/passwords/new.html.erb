<div class="row">
  <div class="small-12 medium-8 medium-offset-2 large-8 large-offset-2 column">
    <div class="callout large">
      <h2 class="user-heading description">Forgot your password?</h2>
      <%= form_for(resource, as: resource_name,
                             url: password_path(resource_name),
                             html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>
        <div class="field">
          <%= f.label :email, class: 'description' %><br />
          <%= f.email_field :email, autofocus: true, class: 'search-field' %>
        </div>

        <div class="actions">
          <%= f.submit "Send me reset link",
                       class: 'submit-btn' %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
